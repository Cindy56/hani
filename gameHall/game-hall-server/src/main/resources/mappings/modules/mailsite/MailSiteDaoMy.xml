<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.game.hall.modules.mailsite.dao.MailSiteDao">


	<select id="selectById" resultType="MailSite">
		SELECT
		<include refid="mailSiteColumns" />
		FROM mail_site a
		<include refid="mailSiteJoins" />
		WHERE
		a.del_flag = 0 AND a.id = #{id}
	</select>


	<update id="deleteById">
		UPDATE mail_site SET
		del_flag = 1
		WHERE id = #{id}
	</update>


</mapper>