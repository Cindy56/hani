<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.game.hall.modules.bet.dao.LotteryPlayConfigDao">






	<!-- 查询所有玩法列表 -->
	<select id="findAllConfigByName" resultType="LotteryPlayConfig">
		SELECT
		<include refid="lotteryPlayConfigColumns" />
		FROM lottery_play_config a
		WHERE
		a.del_flag = 0 AND a.lottery_code = #{name}
		ORDER BY a.create_date ASC
	</select>



</mapper>